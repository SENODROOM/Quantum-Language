{
  "name": "quantum-language",
  "displayName": "Quantum Language",
  "description": "Syntax highlighting, multi-syntax coloring, auto-completion, and snippets for Quantum Language (.sa files)",
  "version": "1.1.0",
  "publisher": "Muhammad Saad Amin",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": ["Programming Languages", "Snippets"],
  "icon": "quantum-icon.png",
  "contributes": {
    "languages": [
      {
        "id": "quantum",
        "aliases": ["Quantum", "quantum", "sa"],
        "extensions": [".sa"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "quantum",
        "scopeName": "source.quantum",
        "path": "./syntaxes/quantum.tmlanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "quantum",
        "path": "./snippets/quantum.json"
      }
    ],
    "configuration": [
      {
        "title": "Quantum Language",
        "properties": {
          "quantum.languageServer.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable Quantum Language Server"
          },
          "quantum.format.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable Quantum code formatting"
          },
          "quantum.linting.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable Quantum linting"
          },
          "quantum.autocomplete.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable Quantum auto-completion"
          }
        }
      }
    ]
  },
  "activationEvents": ["onLanguage:quantum"],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^16.x",
    "typescript": "^4.4.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SENODROOM/Quantum-Language.git"
  },
  "keywords": ["quantum", "programming language", "cybersecurity", "scripting", "autocomplete", "syntax highlighting", "multi-syntax"],
  "author": "Muhammad Saad Amin",
  "license": "MIT"
}
